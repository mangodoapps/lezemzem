<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ lang(req, 'admin.main.Login') }} | {{ lang(req, 'admin.main.Admin Panel') }}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,opsz,wght@0,6..12,200;0,6..12,300;0,6..12,400;0,6..12,500;0,6..12,600;0,6..12,700;0,6..12,800;0,6..12,900;0,6..12,1000;1,6..12,200;1,6..12,300;1,6..12,400;1,6..12,500;1,6..12,600;1,6..12,700;1,6..12,800;1,6..12,900;1,6..12,1000&display=swap" rel="stylesheet">
		<script src="/static/storage/js/jquery-3.7.1.min.js"></script>
		<script src="/static/storage/js/fontawesome.min.js"></script>
		<script src="/static/storage/js/admin/login.js"></script>
		<style>
			*{
				margin: 0;
				padding: 0;
				font-family: "Nunito Sans", sans-serif;
			}
			:focus {
				outline: none;
			}
			body {
				display: flex;
				justify-content: center;
				align-items: center;
				height: 100vh;
				background-color: white;
			}
			.login {
				padding: 50px;
				border-radius: 5px;
				background: white;
				width: 90vw;
				max-width: 270px;
				box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
			}
			.login h1 {
				font-size: 35px;
				margin-bottom: 10px;
				text-align: center;
				text-transform: uppercase;
				font-weight: 800;
			}
			.login > span {
				font-size: 14px;
				color: #f36f6f;
				display: block;
				text-align: center;
				margin-bottom: 10px;
				display: none;
			}
			.login form {
				display: flex;
				gap: 10px;
				flex-direction: column;
			}
			.login form .input {
				display: flex;
				border: 1px solid #e5e5e5;
				border-radius: 5px;
				align-items: center;
				overflow: hidden;
			}
			.login form input {
				padding: 10px;
				font-size: 14px;
				overflow: hidden;
				border: 0;
				width: calc(100% - 32px);
			}
			.login form .input svg {
				width: 18px;
				height: 18px;
				padding: 7px;
			}
			.login form button {
				padding: 10px 20px;
				font-size: 14px;
				cursor: pointer;
				text-decoration: none;
				transition: .2s ease-in-out;
				background: white;
				color: #25396f;
				gap: 10px;
				align-items: center;
				border-radius: 5px;
				font-weight: bold;
				user-select: none;
				border: 0;
				background: #435ebe;
    			color: white;
				display: flex;
			}
			.login form button:hover {
				background: #2d4392;
			}
			.login form button svg {
				width: 16px;
			}
			.login form button .loading-animation {
				display: none;
			}
		</style>
	</head>
	<body>
		<div class="login">
			<h1>{{ lang(req, 'admin.main.Login') }}</h1>
			<span data-message-server-error="{{ lang(req, 'admin.main.Server Error') }}"></span>
			<form method="POST">
				<div class="input">
					<i class="fa-solid fa-user"></i>
					<input type="email" placeholder="{{ lang(req, 'admin.main.Email') }} *" required name="email">
				</div>
				<div class="input">
					<i class="fa-solid fa-key"></i>
					<input type="password" placeholder="{{ lang(req, 'admin.main.Password') }} *" required name="password">
				</div>
				<div class="button">
					<button>
						<i class="fa-solid fa-lock"></i>
						<svg class="loading-animation" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" style="margin: auto; background: none; shape-rendering: auto;" width="16px" height="16px" viewBox="0 0 100 100" preserveAspectRatio="xMidYMid">
							<circle cx="50" cy="50" fill="none" stroke="#ffffff" stroke-width="10" r="35" stroke-dasharray="164.93361431346415 56.97787143782138">
								<animateTransform attributeName="transform" type="rotate" repeatCount="indefinite" dur="1s" values="0 50 50;360 50 50" keyTimes="0;1"></animateTransform>
							</circle>
						</svg>
						<span>{{ lang(req, 'admin.main.Login') }}</span>
					</button>
				</div>
			</form>
		</div>
	</body>

</html>
